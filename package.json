{
  "name": "@l.leo/next-zod-route",
  "version": "1.1.1",
  "description": "A zod way to define route handlers in Next.js",
  "keywords": [
    "next",
    "nextjs",
    "next route",
    "next safe route",
    "nextjs safe",
    "nextjs safe route",
    "next api route",
    "nextjs api route",
    "nextjs zod route",
    "nextjs zod api route"
  ],
  "homepage": "https://github.com/leo7418/next-zod-route#readme",
  "bugs": {
    "url": "https://github.com/leo7418/next-zod-route/issues",
    "email": "help@melvynx.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leo7418/next-zod-route.git"
  },
  "license": "MIT",
  "author": {
    "name": "Melvyn Malherbe",
    "email": "melvyn@melvynx.com",
    "url": "https://melvynx.com"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "pnpm build --watch",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "tsc --noEmit && eslint .",
    "lint-staged": "lint-staged",
    "prepare": "husky",
    "release": "release-it",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@swc/core": "^1.15.7",
    "@tronite/style-guide": "^0.0.13",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "parse-path": "^7.1.0",
    "prettier": "^3.7.4",
    "release-it": "^19.2.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1",
    "vitest": "^4.0.16"
  },
  "packageManager": "pnpm@10.26.2",
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "release-it": {
    "git": {
      "requireBranch": "main",
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "${version}"
    },
    "hooks": {
      "before:init": [
        "git pull",
        "pnpm lint",
        "pnpm build"
      ]
    }
  }
}
